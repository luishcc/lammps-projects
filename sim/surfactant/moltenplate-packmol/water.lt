water {

  write_once("In Init") {
    units           lj
    atom_style      hybrid angle charge
    bond_style      harmonic
    angle_style     harmonic

    dihedral_style  none
    improper_style  none

    pair_style  hybrid/overlay mdpd/rhosum mdpd 1.0 1.0 9872598
  }

  H2O {
    write("Data Atoms") {
      $atom:w   @atom:water    0.00  0.00  0.00 $mol:. 2
    }

    write_once("Data Masses") {
      @atom:water  1
    }

  } #H2O


} # Water
