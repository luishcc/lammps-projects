units lj
dimension 3
boundary p p p

processors 2 2 *

atom_style hybrid angle mdpd
neighbor 0.4 bin
neigh_modify every 1 delay 0 check yes
comm_modify vel yes cutoff 2.5

log test.log
read_data system-n4.data 

###########################################################
# Pair, Bond and Angle Coefficients

pair_style hybrid/overlay mdpd/rhosum mdpd 1.0 1.0 65689
pair_coeff  *  *   mdpd/rhosum  0.75
#
pair_coeff  1  1   mdpd  -50.0  25.0  4.5  1.0  0.75

bond_style fene
bond_coeff 1 30.0 1.5 1.0 1.0

###########################################################

min_style cg
minimize 0 1e-4 1000 10000

fix         mvv     all mvv/dpd 0.65

compute             mythermo all temp
thermo              100
thermo_modify       temp mythermo
thermo_modify       flush yes

#thermo_modify	 lost ignore lost/bond ignore

timestep 0.01

dump 2 all atom 100 poly-n4.lammpstrj

run 200000

