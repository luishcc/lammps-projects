log dipole2.log

units		lj
atom_style	hybrid sphere dipole mdpd
dimension	3
boundary p p p

neighbor	0.5 bin
neigh_modify	every 1 delay 0 check yes
comm_modify vel yes cutoff 2.5

# region        box  block -10 10 -10 10 -10 10 units box
# create_box	2 box

# region        drop   sphere 0 0 0 7
# region        drop2   sphere 0 0 0 6
# create_atoms  1 random $(round(6.1*3.1415*5*5*5*4/3)) 2021 drop
# create_atoms  2 random $(round(6.1*3.1415*5*5*5*4/3*0.05)) 2022 drop2


region        box  block 0 10 0 10 0 2 units box
create_box	2 box

create_atoms  1 random $(round(6.1*10*10*3)) 2021 box
create_atoms  2 random $(round(6.1*10*10*3*0.1)) 2022 box

# need both mass settings due to hybrid atom style

group mnp type 2
mass		* 1.0
set		group all mass 1.0
set		group mnp dipole/random 98934 0.1

velocity	all create 1 87287 mom yes


# pair_style hybrid/overlay mdpd/rhosum mdpd 1.0 1.0 65689 lj/cut/dipole/cut 2.5
pair_style hybrid/overlay mdpd/rhosum mdpd 1.0 1.0 65689 lj/sf/dipole/sf 2.5

pair_coeff  *  *   mdpd/rhosum  0.75
pair_coeff  *  *   mdpd  -50.0  25.0  4.5  1.0  0.75


# pair_coeff	2  2 lj/cut/dipole/cut 0.0 1.5
pair_coeff	2  2 lj/sf/dipole/sf 0.0 1.5


# pair_coeff	1  2 lj/cut/dipole/cut 0.1 0.5
# pair_coeff	1  2 lj/sf/dipole/sf 0.1 0.3


dump		1 all custom 100 dump.dipole3 id type x y z mux muy muz fx fy fz

min_style cg
minimize 0 0 1000 10000

# fix field all efield 0 100 0


fix		1 all nve/sphere  update dipole
# fix         2 all mvv/dpd 0.65 update dipole

timestep	0.01

# compute		erot all erotate/sphere
thermo_style	custom step temp  press
thermo		200

# thermo_modify lost ignore

run		20000

# fix field all efield 0 10000 0

run		20000
