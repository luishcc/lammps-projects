units 		          lj
dimension	          3
boundary	          p p p
neighbor	          0.3 bin
neigh_modify        every 1 check yes

atom_style	        mdpd


region     mdpd     block -10 10  -10 10  20 40 units box
create_box          1 mdpd

region     slab     block -10 10  -10 10  20 40
create_atoms        1 random 58000 2021 slab

pair_style          hybrid/overlay mdpd/rhosum mdpd 1.0 1.0 9872598
pair_coeff          1 1 mdpd/rhosum  0.75
pair_coeff          1 1 mdpd         -50 25 18.0 1.0 0.75
mass                1 1.0


compute             mythermo all temp
thermo              100
thermo_modify       temp mythermo
thermo_modify       flush yes


velocity            all create 1.0 2093 loop local dist gaussian
comm_modify         vel yes
fix         mvv     all mvv/dpd 0.65

fix 1 all npt temp 0.98 1.02 0.1 iso -0.01 0.01 1.0

dump        mydump  all atom 100 sim_npt.lammpstrj
#
# min_style cg
# minimize 0 0 1000 10000

timestep            0.01
run                 20000

