units lj
atom_style hybrid sphere dipole mdpd
dimension 3
boundary p p f

neighbor 0.5 bin
neigh_modify every 1 delay 0 check yes
comm_modify vel yes cutoff 3.5


variable con index 0.15
variable dip index 3
variable size equal 10


region box block $(-v_size) $(v_size) -3.5 3.5  0 30 units box
create_box 2 box

region drop block $(-v_size) $(v_size) -3.5 3.5 0.2 8 units box

# create_atoms 1 random $(round(6.9*v_size^2*4*8*(1-v_con))) 2021 drop
# create_atoms 2 random $(round(6.9*v_size^2*4*8*v_con)) 2022 drop
create_atoms 1 random $(round(6.9*v_size*14*8*(1-v_con))) 2021 drop
create_atoms 2 random $(round(6.9*v_size*14*8*v_con)) 2022 drop
group drop type 1
group mnp type 2
mass * 1.0

velocity all create 1 1 dist gaussian mom yes 

if "$(v_dip>0.001)" then &
  "set group mnp dipole/random 98934 $(v_dip)"


#############################################################
# pair_style hybrid/overlay mdpd/rhosum mdpd 1.0 1.0 65689 lj/sf/dipole/sf 1 3.0
pair_style hybrid/overlay mdpd/rhosum mdpd 1.0 1.0 65689 lj/cut/dipole/long 1 3.0

pair_coeff  *  *   mdpd/rhosum  0.75
pair_coeff  1  1   mdpd  -50  25  18  1.0  0.75
pair_coeff  1  2   mdpd  -70  25  18  1.0  0.75
pair_coeff  2  2   mdpd  -50  25  18  1.0  0.75

# pair_coeff	1  2 lj/sf/dipole/sf 10 0.6
# pair_coeff	2  2 lj/sf/dipole/sf 1 .890899
pair_coeff	2  2 lj/cut/dipole/long 1 .890899

kspace_style ewald/dipole 1e-02
kspace_modify slab nozforce
#############################################################

dump		1 all custom 100 test.lammpstrj id type x y z mux muy muz 

fix wallhi all wall/harmonic zhi EDGE 100 1.5 2.0 units box
fix walllo all wall/lj93 zlo EDGE 20 0.5 1.0 units box 
# 10 very hydrophilic, 2 hydrophobic, 5 around 90 deg


min_style cg
# minimize 0 0 10000 100000
minimize 1e-4 1e-4 1000 10000

run_style respa 2 10 hybrid 2 2 1 

fix		1 all nve/sphere  update dipole
# fix         2 all mvv/dpd 0.65 

thermo_style	custom step temp press
thermo		100


# timestep	0.001
# run 1000

# timestep	0.01
# run 1000


##################################################
##################################################
# Magnetic field definition 

variable Amp equal 100
variable alpha equal 2*PI/(zhi-zlo)*2

variable Bx atom 0
variable By atom 0
# variable Bz atom v_Amp*sin(v_alpha*z)
variable Bz atom v_Amp

# Apply field to magnetic particles (group mnp)
fix field mnp efield v_Bx v_By v_Bz

fix gravity all addforce 0 0 -.1

